<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.message %></h4>
      <!-- What the if condition below does is it hides the stack trace when we're in production but it shows it in development as we might need to see that to resolve errors. -->
      <% if(process.env.NODE_ENV != 'production') { %>
      <p><%= err.stack %></p>
      <%}%>
    </div>
  </div>
</div>
